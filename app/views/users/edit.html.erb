<h1>Edit Profile</h1>

<%= form_for @user, html: { enctype: 'multipart/form-data' } do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :profile_picture %><br />
    <% if @user.profile_picture.attached? %>
      <%= image_tag @user.profile_picture.variant(resize_to_limit: [100, 100]) %><br />
    <% end %>
    <%= f.file_field :profile_picture %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Profile', class: 'btn btn-primary' %>
  </div>
<% end %>

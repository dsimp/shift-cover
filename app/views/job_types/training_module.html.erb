<div class="container">
  <h1><%= @job_type.title %> Training Module</h1>
  <div class="card mb-4">
    <div class="card-body">
      <%= simple_format(@job_type.training_module) %>
    </div>
  </div>
  <%= form_with url: complete_training_job_type_path(@job_type), method: :post do %>
    <div class="form-check mb-3">
      <%= check_box_tag :agree, 'yes', false, required: true, class: 'form-check-input' %>
      <%= label_tag :agree, 'I have read and understood the training material.', class: 'form-check-label' %>
    </div>
    <%= submit_tag 'Complete Training', class: 'btn btn-success' %>
  <% end %>
</div>
